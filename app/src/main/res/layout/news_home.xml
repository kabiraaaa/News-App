<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/mainContainer">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/newspubtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Published At"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/newspublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Published By"
            android:layout_toRightOf="@id/newspubtime"
            android:layout_toLeftOf="@id/newspic"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/newsheadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Headline"
            android:layout_below="@id/newspubtime"
            android:layout_toLeftOf="@id/newspic"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/newsdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News Description"
            android:layout_toLeftOf="@id/newspic"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/newsheadline"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/newspic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:padding="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>